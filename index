<body>
    <div id="game-container">
        <canvas id="game-canvas"></canvas>
        
        <div id="ui-layer">
            <div id="hud">
                <div class="hud-item">
                    <div class="hud-label">PONTUAÇÃO</div>
                    <div class="hud-value" id="score">0</div>
                </div>
                <div class="hud-item">
                    <div class="hud-label">NÍVEL</div>
                    <div class="hud-value" id="level">1</div>
                </div>
                <div class="hud-item">
                    <div class="hud-label">VIDA</div>
                    <div id="health-bar">
                        <div id="health-fill"></div>
                    </div>
                </div>
            </div>
            
            <div id="weapon-display">
                <div class="hud-label">ARMA</div>
                <div class="weapon-icon active" id="weapon-single"><i class="fas fa-bolt"></i></div>
                <div class="weapon-icon" id="weapon-burst"><i class="fas fa-gem"></i></div>
                <div class="weapon-icon" id="weapon-laser"><i class="fas fa-fire"></i></div>
            </div>
            
            <div id="mobile-controls">
                <div id="dpad">
                    <div class="dpad-row">
                        <div class="control-btn dpad-btn" id="up-btn"><i class="fas fa-arrow-up"></i></div>
                    </div>
                    <div class="dpad-row">
                        <div class="control-btn dpad-btn" id="left-btn"><i class="fas fa-arrow-left"></i></div>
                        <div class="control-btn dpad-btn" id="down-btn"><i class="fas fa-arrow-down"></i></div>
                        <div class="control-btn dpad-btn" id="right-btn"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="control-btn" id="fire-btn"><i class="fas fa-crosshairs"></i></div>
            </div>
        </div>
        
        <div id="start-screen" class="screen">
            <h1>COSMIC DEFENDER</h1>
            <h2>Defenda a Galáxia</h2>
            <button class="btn" id="start-btn">INICIAR MISSÃO</button>
            <div style="margin-top: 30px; text-align: center; max-width: 80%;">
                <p>Controles: WASD ou Setas para mover | Espaço para atirar | 1,2,3 para trocar armas</p>
                <p>Toque na tela para controles móveis</p>
            </div>
        </div>
        
        <div id="game-over-screen" class="screen">
            <h1>MISSÃO FALHOU</h1>
            <h2 id="final-score">Pontuação: 0</h2>
            <button class="btn" id="restart-btn">REINICIAR</button>
        </div>
    </div>

    <script>
        // Configurações do jogo
        const CONFIG = {
            canvas: {
                width: 800,
                height: 600
            },
            player: {
                width: 40,
                height: 50,
                speed: 5,
                maxHealth: 100
            },
            weapons: {
                single: { damage: 10, speed: 8, color: '#4fc3f7', cooldown: 15 },
                burst: { damage: 7, speed: 10, color: '#ff4081', cooldown: 5, burstCount: 3 },
                laser: { damage: 15, speed: 12, color: '#ffeb3b', cooldown: 30, duration: 10 }
            },
            enemies: {
                basic: { health: 30, speed: 2, color: '#ff5252', points: 10 },
                fast: { health: 20, speed: 4, color: '#ff9800', points: 15 },
                tank: { health: 100, speed: 1, color: '#795548', points: 30 },
                kamikaze: { health: 10, speed: 3, color: '#e91e63', points: 20 }
            }
        };

        // Elementos do DOM
        let canvas, ctx, startScreen, gameOverScreen, startBtn, restartBtn;
        let scoreEl, levelEl, healthFill, finalScoreEl, weaponIcons;

        // Estado do jogo
        let gameState = {
            running: false,
            score: 0,
            level: 1,
            screenShake: 0,
            lastTime: 0,
            stars: []
        };

        // Classes do jogo
        class Player {
            constructor() {
                this.x = CONFIG.canvas.width / 2;
                this.y = CONFIG.canvas.height - 100;
                this.width = CONFIG.player.width;
                this.height = CONFIG.player.height;
                this.speed = CONFIG.player.speed;
                this.health = CONFIG.player.maxHealth;
                this.maxHealth = CONFIG.player.maxHealth;
                this.weapon = 'single';
                this.weaponCooldown = 0;
                this.invulnerable = 0;
                this.direction = { x: 0, y: 0 };
            }

            update() {
                // Movimento
                this.x += this.direction.x * this.speed;
                this.y += this.direction.y * this.speed;

                // Limites da tela
                this.x = Math.max(this.width/2, Math.min(CONFIG.canvas.width - this.width/2, this.x));
                this.y = Math.max(this.height/2, Math.min(CONFIG.canvas.height - this.height/2, this.y));

                // Cooldown da arma
                if (this.weaponCooldown > 0) this.weaponCooldown--;

                // Invulnerabilidade pós-dano
                if (this.invulnerable > 0) this.invulnerable--;
            }

            draw() {
                ctx.save();
                
                // Efeito de invulnerabilidade (piscar)
                if (this.invulnerable > 0 && Math.floor(this.invulnerable / 5) % 2 === 0) {
                    ctx.globalAlpha = 0.5;
                }

                // Desenhar nave do jogador
                ctx.fillStyle = '#4fc3f7';
                ctx.beginPath();
                ctx.moveTo(this.x, this.y - this.height/2);
                ctx.lineTo(this.x + this.width/2, this.y + this.height/2);
                ctx.lineTo(this.x - this.width/2, this.y + this.height/2);
                ctx.closePath();
                ctx.fill();

                // Detalhes da nave
                ctx.fillStyle = '#0288d1';
                ctx.fillRect(this.x - 5, this.y + this.height/2 - 10, 10, 10);

                ctx.restore();
            }

            shoot() {
                if (this.weaponCooldown > 0) return [];

                const weaponConfig = CONFIG.weapons[this.weapon];
                this.weaponCooldown = weaponConfig.cooldown;
                
                let bullets = [];
                
                switch(this.weapon) {
                    case 'single':
                        bullets.push(new Bullet(this.x, this.y - this.height/2, 0, -weaponConfig.speed, weaponConfig));
                        break;
                    
                    case 'burst':
                        for (let i = 0; i < weaponConfig.burstCount; i++) {
                            const angle = -Math.PI/2 + (i - 1) * 0.2;
                            bullets.push(new Bullet(
                                this.x, 
                                this.y - this.height/2, 
                                Math.sin(angle) * weaponConfig.speed, 
                                Math.cos(angle) * weaponConfig.speed, 
                                weaponConfig
                            ));
                        }
                        break;
                    
                    case 'laser':
                        bullets.push(new Laser(this.x, this.y - this.height/2, 0, -weaponConfig.speed, weaponConfig));
                        break;
                }
                
                return bullets;
            }

            takeDamage(amount) {
                if (this.invulnerable > 0) return;
                
                this.health -= amount;
                this.invulnerable = 60; // 1 segundo de invulnerabilidade
                gameState.screenShake = 10;
                
                // Atualizar barra de vida
                updateHealthBar();
                
                // Criar partículas de dano
                for (let i = 0; i < 10; i++) {
                    particles.push(new Particle(
                        this.x, 
                        this.y, 
                        (Math.random() - 0.5) * 4, 
                        (Math.random() - 0.5) * 4,
                        '#ff5252',
                        30
                    ));
                }
                
                return this.health <= 0;
            }

            setWeapon(weaponType) {
                if (CONFIG.weapons[weaponType]) {
                    this.weapon = weaponType;
                    
                    // Atualizar ícones de arma
                    Object.keys(weaponIcons).forEach(key => {
                        weaponIcons[key].classList.toggle('active', key === weaponType);
                    });
                }
            }
        }

        class Bullet {
            constructor(x, y, vx, vy, config) {
                this.x = x;
                this.y = y;
                this.vx = vx;
                this.vy = vy;
                this.width = 4;
                this.height = 12;
                this.color = config.color;
                this.damage = config.damage;
                this.speed = config.speed;
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;
                return this.y > 0 && this.y < CONFIG.canvas.height && 
                       this.x > 0 && this.x < CONFIG.canvas.width;
            }

            draw() {
                ctx.fillStyle = this.color;
                ctx.fillRect(this.x - this.width/2, this.y - this.height/2, this.width, this.height);
                
                // Brilho da bala
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(this.x - this.width/4, this.y - this.height/2, this.width/2, this.height);
            }
        }

        class Laser extends Bullet {
            constructor(x, y, vx, vy, config) {
                super(x, y, vx, vy, config);
                this.width = 8;
                this.height = 20;
                this.duration = config.duration;
            }

            draw() {
                // Gradiente para efeito de laser
                const gradient = ctx.createLinearGradient(this.x - this.width/2, this.y - this.height/2, this.x + this.width/2, this.y + this.height/2);
                gradient.addColorStop(0, '#ffffff');
                gradient.addColorStop(0.5, this.color);
                gradient.addColorStop(1, '#ffffff');
                
                ctx.fillStyle = gradient;
                ctx.fillRect(this.x - this.width/2, this.y - this.height/2, this.width, this.height);
                
                // Brilho externo
                ctx.shadowColor = this.color;
                ctx.shadowBlur = 10;
                ctx.fillRect(this.x - this.width/2, this.y - this.height/2, this.width, this.height);
                ctx.shadowBlur = 0;
            }
        }

        class Enemy {
            constructor(type, x, y) {
                this.type = type;
                this.config = CONFIG.enemies[type];
                this.x = x;
                this.y = y;
                this.width = 30;
                this.height = 30;
                this.health = this.config.health;
                this.speed = this.config.speed;
                this.color = this.config.color;
                this.points = this.config.points;
            }

            update() {
                // Movimento baseado no tipo de inimigo
                switch(this.type) {
                    case 'basic':
                        this.y += this.speed;
                        break;
                    case 'fast':
                        this.y += this.speed;
                        this.x += Math.sin(this.y * 0.05) * 2;
                        break;
                    case 'tank':
                        this.y += this.speed;
                        break;
                    case 'kamikaze':
                        // Movimento em direção ao jogador
                        const dx = player.x - this.x;
                        const dy = player.y - this.y;
                        const dist = Math.sqrt(dx * dx + dy * dy);
                        this.x += (dx / dist) * this.speed;
                        this.y += (dy / dist) * this.speed;
                        break;
                }
                
                return this.y < CONFIG.canvas.height + 50;
            }

            draw() {
                ctx.fillStyle = this.color;
                
                // Formas diferentes baseadas no tipo
                switch(this.type) {
                    case 'basic':
                        ctx.fillRect(this.x - this.width/2, this.y - this.height/2, this.width, this.height);
                        break;
                    case 'fast':
                        ctx.beginPath();
                        ctx.arc(this.x, this.y, this.width/2, 0, Math.PI * 2);
                        ctx.fill();
                        break;
                    case 'tank':
                        ctx.fillRect(this.x - this.width/2, this.y - this.height/2, this.width, this.height);
                        // Detalhes do tanque
                        ctx.fillStyle = '#5d4037';
                        ctx.fillRect(this.x - this.width/4, this.y - this.height/4, this.width/2, this.height/2);
                        break;
                    case 'kamikaze':
                        ctx.beginPath();
                        ctx.moveTo(this.x, this.y - this.height/2);
                        ctx.lineTo(this.x + this.width/2, this.y + this.height/2);
                        ctx.lineTo(this.x - this.width/2, this.y + this.height/2);
                        ctx.closePath();
                        ctx.fill();
                        break;
                }
                
                // Barra de saúde (para inimigos com mais vida)
                if (this.health < this.config.health) {
                    ctx.fillStyle = '#ff0000';
                    ctx.fillRect(this.x - this.width/2, this.y - this.height/2 - 10, this.width, 5);
                    ctx.fillStyle = '#00ff00';
                    ctx.fillRect(this.x - this.width/2, this.y - this.height/2 - 10, this.width * (this.health / this.config.health), 5);
                }
            }

            takeDamage(amount) {
                this.health -= amount;
                return this.health <= 0;
            }
        }

        class Particle {
            constructor(x, y, vx, vy, color, life) {
                this.x = x;
                this.y = y;
                this.vx = vx;
                this.vy = vy;
                this.color = color;
                this.life = life;
                this.maxLife = life;
                this.size = Math.random() * 3 + 1;
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;
                this.life--;
                return this.life > 0;
            }

            draw() {
                const alpha = this.life / this.maxLife;
                ctx.globalAlpha = alpha;
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
                ctx.globalAlpha = 1;
            }
        }

        // Variáveis globais do jogo
        let player;
        let bullets = [];
        let enemies = [];
        let particles = [];
        let keys = {};
        let animationId;
        let spawnTimer = 0;
        let levelProgress = 0;

        // Inicialização do jogo
        function init() {
            // Configurar canvas
            canvas.width = CONFIG.canvas.width;
            canvas.height = CONFIG.canvas.height;
            
            // Criar jogador
            player = new Player();
            
            // Inicializar estrelas de fundo
            initStars();
            
            // Configurar eventos
            setupEventListeners();
            
            // Iniciar loop do jogo
            gameState.running = true;
            gameState.lastTime = performance.now();
            animationId = requestAnimationFrame(gameLoop);
        }

        function initStars() {
            gameState.stars = [];
            for (let i = 0; i < 200; i++) {
                gameState.stars.push({
                    x: Math.random() * CONFIG.canvas.width,
                    y: Math.random() * CONFIG.canvas.height,
                    size: Math.random() * 2 + 0.5,
                    speed: Math.random() * 2 + 0.5,
                    layer: Math.floor(Math.random() * 3) + 1
                });
            }
        }

        function setupEventListeners() {
            // Teclado
            document.addEventListener('keydown', (e) => {
                keys[e.key] = true;
                
                // Trocar armas com teclas numéricas
                if (e.key === '1') player.setWeapon('single');
                if (e.key === '2') player.setWeapon('burst');
                if (e.key === '3') player.setWeapon('laser');
            });
            
            document.addEventListener('keyup', (e) => {
                keys[e.key] = false;
            });
            
            // Controles móveis
            setupMobileControls();
        }

        function setupMobileControls() {
            const controlBtns = document.querySelectorAll('.control-btn');
            
            controlBtns.forEach(btn => {
                btn.addEventListener('touchstart', (e) => {
                    e.preventDefault();
                    const id = e.target.closest('.control-btn').id;
                    
                    if (id === 'up-btn') player.direction.y = -1;
                    if (id === 'down-btn') player.direction.y = 1;
                    if (id === 'left-btn') player.direction.x = -1;
                    if (id === 'right-btn') player.direction.x = 1;
                    if (id === 'fire-btn') {
                        // Tiro automático em dispositivos móveis
                        if (!keys[' ']) {
                            keys[' '] = true;
                            setTimeout(() => { keys[' '] = false; }, 100);
                        }
                    }
                });
                
                btn.addEventListener('touchend', (e) => {
                    e.preventDefault();
                    const id = e.target.closest('.control-btn').id;
                    
                    if (id === 'up-btn' || id === 'down-btn') player.direction.y = 0;
                    if (id === 'left-btn' || id === 'right-btn') player.direction.x = 0;
                });
            });
        }

        function startGame() {
            console.log("Iniciando jogo...");
            startScreen.style.display = 'none';
            gameState.score = 0;
            gameState.level = 1;
            updateScore();
            init();
        }

        function restartGame() {
            gameOverScreen.style.display = 'none';
            bullets = [];
            enemies = [];
            particles = [];
            spawnTimer = 0;
            levelProgress = 0;
            startGame();
        }

        function gameOver() {
            gameState.running = false;
            cancelAnimationFrame(animationId);
            finalScoreEl.textContent = `Pontuação: ${gameState.score}`;
            gameOverScreen.style.display = 'flex';
        }

        // Loop principal do jogo
        function gameLoop(currentTime) {
            const deltaTime = currentTime - gameState.lastTime;
            gameState.lastTime = currentTime;
            
            // Atualizar
            update(deltaTime);
            
            // Renderizar
            render();
            
            // Continuar loop
            if (gameState.running) {
                animationId = requestAnimationFrame(gameLoop);
            }
        }

        function update(deltaTime) {
            // Processar entrada
            handleInput();
            
            // Atualizar jogador
            player.update();
            
            // Atualizar balas
            bullets = bullets.filter(bullet => bullet.update());
            
            // Atualizar inimigos
            enemies = enemies.filter(enemy => enemy.update());
            
            // Atualizar partículas
            particles = particles.filter(particle => particle.update());
            
            // Gerar inimigos
            spawnEnemies(deltaTime);
            
            // Verificar colisões
            checkCollisions();
            
            // Atualizar progresso do nível
            updateLevel();
        }

        function handleInput() {
            // Movimento
            player.direction.x = 0;
            player.direction.y = 0;
            
            if (keys['ArrowLeft'] || keys['a'] || keys['A']) player.direction.x = -1;
            if (keys['ArrowRight'] || keys['d'] || keys['D']) player.direction.x = 1;
            if (keys['ArrowUp'] || keys['w'] || keys['W']) player.direction.y = -1;
            if (keys['ArrowDown'] || keys['s'] || keys['S']) player.direction.y = 1;
            
            // Tiro
            if (keys[' ']) {
                const newBullets = player.shoot();
                bullets.push(...newBullets);
            }
        }

        function spawnEnemies(deltaTime) {
            spawnTimer += deltaTime;
            
            // Intervalo de spawn baseado no nível
            const spawnInterval = Math.max(500, 1000 - gameState.level * 100);
            
            if (spawnTimer > spawnInterval) {
                spawnTimer = 0;
                
                // Tipos de inimigos baseados no nível
                let enemyTypes = ['basic'];
                if (gameState.level >= 2) enemyTypes.push('fast');
                if (gameState.level >= 3) enemyTypes.push('kamikaze');
                if (gameState.level >= 4) enemyTypes.push('tank');
                
                // Escolher tipo aleatório
                const type = enemyTypes[Math.floor(Math.random() * enemyTypes.length)];
                
                // Posição aleatória no topo da tela
                const x = Math.random() * (CONFIG.canvas.width - 60) + 30;
                
                enemies.push(new Enemy(type, x, -30));
                
                // Incrementar progresso do nível
                levelProgress++;
            }
        }

        function checkCollisions() {
            // Colisões bala-inimigo
            for (let i = bullets.length - 1; i >= 0; i--) {
                for (let j = enemies.length - 1; j >= 0; j--) {
                    const bullet = bullets[i];
                    const enemy = enemies[j];
                    
                    // Verificar colisão simples (retângulo)
                    if (Math.abs(bullet.x - enemy.x) < (bullet.width + enemy.width)/2 &&
                        Math.abs(bullet.y - enemy.y) < (bullet.height + enemy.height)/2) {
                        
                        // Inimigo atingido
                        if (enemy.takeDamage(bullet.damage)) {
                            // Inimigo destruído
                            gameState.score += enemy.points;
                            updateScore();
                            
                            // Criar explosão
                            createExplosion(enemy.x, enemy.y, enemy.color);
                            
                            // Remover inimigo
                            enemies.splice(j, 1);
                        }
                        
                        // Remover bala (a menos que seja laser)
                        if (!(bullet instanceof Laser)) {
                            bullets.splice(i, 1);
                        }
                        
                        break;
                    }
                }
            }
            
            // Colisões jogador-inimigo
            for (let i = enemies.length - 1; i >= 0; i--) {
                const enemy = enemies[i];
                
                if (Math.abs(player.x - enemy.x) < (player.width + enemy.width)/2 &&
                    Math.abs(player.y - enemy.y) < (player.height + enemy.height)/2) {
                    
                    // Dano ao jogador
                    if (player.takeDamage(20)) {
                        gameOver();
                        return;
                    }
                    
                    // Inimigo destruído (kamikaze)
                    if (enemy.type === 'kamikaze') {
                        gameState.score += enemy.points;
                        updateScore();
                        createExplosion(enemy.x, enemy.y, enemy.color);
                        enemies.splice(i, 1);
                    }
                }
            }
        }

        function createExplosion(x, y, color) {
            gameState.screenShake = 15;
            
            for (let i = 0; i < 20; i++) {
                particles.push(new Particle(
                    x, 
                    y, 
                    (Math.random() - 0.5) * 8, 
                    (Math.random() - 0.5) * 8,
                    color,
                    Math.random() * 30 + 20
                ));
            }
        }

        function updateLevel() {
            const levelThreshold = 10 + gameState.level * 5;
            
            if (levelProgress >= levelThreshold) {
                gameState.level++;
                levelProgress = 0;
                levelEl.textContent = gameState.level;
                
                // Efeito visual de mudança de nível
                gameState.screenShake = 30;
                
                // Recuperar um pouco de vida
                player.health = Math.min(player.maxHealth, player.health + 20);
                updateHealthBar();
                
                // Criar efeito visual
                for (let i = 0; i < 50; i++) {
                    particles.push(new Particle(
                        CONFIG.canvas.width / 2,
                        CONFIG.canvas.height / 2,
                        (Math.random() - 0.5) * 10,
                        (Math.random() - 0.5) * 10,
                        '#4fc3f7',
                        60
                    ));
                }
            }
        }

        function render() {
            // Limpar canvas com efeito de screen shake
            let shakeX = 0;
            let shakeY = 0;
            
            if (gameState.screenShake > 0) {
                shakeX = (Math.random() - 0.5) * gameState.screenShake;
                shakeY = (Math.random() - 0.5) * gameState.screenShake;
                gameState.screenShake--;
            }
            
            ctx.setTransform(1, 0, 0, 1, shakeX, shakeY);
            ctx.clearRect(0, 0, CONFIG.canvas.width, CONFIG.canvas.height);
            
            // Desenhar fundo estrelado
            drawStars();
            
            // Desenhar elementos do jogo
            bullets.forEach(bullet => bullet.draw());
            enemies.forEach(enemy => enemy.draw());
            particles.forEach(particle => particle.draw());
            player.draw();
            
            // Resetar transformação
            ctx.setTransform(1, 0, 0, 1, 0, 0);
        }

        function drawStars() {
            ctx.fillStyle = '#ffffff';
            
            gameState.stars.forEach(star => {
                // Mover estrela (efeito parallax)
                star.y += star.speed * 0.05;
                if (star.y > CONFIG.canvas.height) {
                    star.y = 0;
                    star.x = Math.random() * CONFIG.canvas.width;
                }
                
                // Tamanho baseado na camada (efeito de profundidade)
                const size = star.size * star.layer;
                const alpha = 0.5 / star.layer;
                
                ctx.globalAlpha = alpha;
                ctx.beginPath();
                ctx.arc(star.x, star.y, size, 0, Math.PI * 2);
                ctx.fill();
            });
            
            ctx.globalAlpha = 1;
        }

        function updateScore() {
            scoreEl.textContent = gameState.score;
        }

        function updateHealthBar() {
            const percent = player.health / player.maxHealth;
            healthFill.style.width = `${percent * 100}%`;
            
            // Mudar cor baseada na saúde
            if (percent > 0.6) {
                healthFill.style.background = 'linear-gradient(90deg, #4caf50, #8bc34a)';
            } else if (percent > 0.3) {
                healthFill.style.background = 'linear-gradient(90deg, #ff9800, #ffc107)';
            } else {
                healthFill.style.background = 'linear-gradient(90deg, #f44336, #ff5252)';
            }
        }

        // Inicializar o jogo quando a página carregar
        window.addEventListener('load', function() {
            // Inicializar elementos DOM
            canvas = document.getElementById('game-canvas');
            ctx = canvas.getContext('2d');
            startScreen = document.getElementById('start-screen');
            gameOverScreen = document.getElementById('game-over-screen');
            startBtn = document.getElementById('start-btn');
            restartBtn = document.getElementById('restart-btn');
            scoreEl = document.getElementById('score');
            levelEl = document.getElementById('level');
            healthFill = document.getElementById('health-fill');
            finalScoreEl = document.getElementById('final-score');
            weaponIcons = {
                single: document.getElementById('weapon-single'),
                burst: document.getElementById('weapon-burst'),
                laser: document.getElementById('weapon-laser')
            };
            
            // Configurar eventos dos botões
            startBtn.addEventListener('click', startGame);
            restartBtn.addEventListener('click', restartGame);
            
            // Configurar canvas
            canvas.width = CONFIG.canvas.width;
            canvas.height = CONFIG.canvas.height;
            
            console.log('Jogo carregado e pronto! Clique em "INICIAR MISSÃO" para começar.');
        });
    </script>
</body>
</html>
